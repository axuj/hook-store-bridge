{
  "name": "hook-store-bridge",
  "version": "1.1.1",
  "description": "A utility to bridge React hook state into Zustand or other state management libraries.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./util": {
      "import": "./dist/util/index.js",
      "types": "./dist/util/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "test": "vitest --typecheck",
    "test:ui": "vitest --ui",
    "check": "biome check --write --unsafe .",
    "dev:example": "cd ./examples/react-router-app && pnpm run dev"
  },
  "keywords": [
    "react",
    "hook",
    "state",
    "zustand",
    "context",
    "prop-drilling",
    "state-management",
    "bridge",
    "adapter",
    "ai",
    "chat"
  ],
  "license": "ISC",
  "packageManager": "pnpm@10.15.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/axuj/hook-store-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/axuj/hook-store-bridge/issues"
  },
  "homepage": "https://github.com/axuj/hook-store-bridge#readme",
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "tsdown": "^0.14.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.0"
  }
}
